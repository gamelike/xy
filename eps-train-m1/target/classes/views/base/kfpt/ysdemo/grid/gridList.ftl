                                            </ul>
                                            <span class="input-group-btn">
                                          <button type="button" data-behavior-type="">…</button>
                                        </span>
                                        </div>
                                        <script type="text/javascript">
                                            //清楚input框里的选择值
                                            function clearInputfwfls(oDel) {
                                                var sid = $(oDel).parent().data('choiceid');
                                                if (sid != "") {
                                                    $(oDel).parent().remove();
                                                    $("input[type='text'][id='" + sid + "']").remove();
                                                }
                                            }
                                        </script>
